<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.showIdeeActivity">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivPosterImage_showIdee"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:src="@drawable/gabenewell"
        android:layout_margin="20sp"/>

    <TextView
        android:id="@+id/tvPosterName_showIdee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gabe Newell"
        android:layout_toEndOf="@+id/ivPosterImage_showIdee"
        android:layout_alignTop="@+id/ivPosterImage_showIdee"/>

    <TextView
        android:id="@+id/tvPosterName_showPostcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Postcount: 200 "
        android:layout_marginTop="10sp"
        android:layout_toEndOf="@+id/ivPosterImage_showIdee"
        android:layout_below="@+id/tvPosterName_showIdee"/>

    <TextView
        android:id="@+id/tvPostTijdenDate_showIdee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:layout_alignParentEnd="true"
        android:text="29-5-2016 | 13:37"/>

    <ImageView
        android:id="@+id/iv_ImagePost_showIdee"
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:layout_below="@+id/ivPosterImage_showIdee"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"/>


    <TextView
        android:id="@+id/tvPosterText_showIdee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_ImagePost_showIdee"
        android:text="dit is placeholder id text blah blah blah dit is placeholder id text blah blah blahdit is placeholder id text blah blah blahdit is placeholder id text blah blah blahdit is placeholder id text blah blah blahdit is placeholder id text blah blah blah"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:layout_marginBottom="5sp"/>
        <Button
            android:id="@+id/btUpvote_showIdee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100 Upvotes"
            android:layout_below="@+id/tvPosterText_showIdee"/>
        <Button
            android:id="@+id/btReageer_showIdee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reageer"
            android:layout_below="@+id/tvPosterText_showIdee"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="5sp"/>


        <ListView
            android:layout_below="@+id/btUpvote_showIdee"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/list_item_reaction"
            >

        </ListView>

    </RelativeLayout>





</ScrollView>
