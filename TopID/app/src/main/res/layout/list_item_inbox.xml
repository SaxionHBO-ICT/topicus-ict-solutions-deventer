<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_inbox_user"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_margin="5sp"
        />

    <TextView
        android:id="@+id/tv_inbox_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/iv_inbox_user"
        android:text="*** reageerde op jouwn post: ***"
        android:textSize="20sp"
        android:textColor="#060606" />

    <TextView
        android:id="@+id/tv_inbox_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_inbox_message"
        android:layout_toEndOf="@+id/iv_inbox_user"
        android:text="dit is een comment"
        android:textSize="15sp"/>

</RelativeLayout>